# Update these with your Supabase details from your project settings > API
# https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Stripe API keys for subscription management
# https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PRICE_ID=your-stripe-price-id-for-subscription
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Supabase service role key for webhook operations
# https://app.supabase.com/project/_/settings/api
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Cohere AI API key for HTML generation
# https://dashboard.cohere.com/api-keys
COHERE_API_KEY=your-cohere-api-key

# Site URL for Stripe redirects
NEXT_PUBLIC_SITE_URL=http://localhost:3000
